{
  "name": "backend-section-remaster",
  "version": "1.0.0",
  "description": "Actualizacion del proyecto del curso la biblia de nodejs en udemy",
  "main": "./build/index.js",
  "scripts": {
    "start-ts": "ts-node index.ts",
    "start-tsc": "tsc && node build/index.js",
    "start-js": "node build/index.js",
    "start-dev2": "nodemon --exec ts-node index.ts",
    "start-dev": "nodemon  --inspect --watch 'src/**/*' -e ts --exec node -r ts-node/register -r dotenv/config ./index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update": "jest --updateSnapshot"
  },
  "keywords": [],
  "author": "Victor Hugo Roman Ruiz",
  "license": "ISC",
  "dependencies": {
    "awilix": "^10.0.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-queue": "^0.0.13",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "memory-cache": "^0.2.0",
    "mongoose": "^8.4.1",
    "mongoose-autopopulate": "^1.1.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/memory-cache": "^0.2.5",
    "@types/mockingoose": "^2.13.0",
    "@types/mongoose-autopopulate": "^0.10.6",
    "@types/node": "^20.12.12",
    "@types/nodemon": "^1.19.6",
    "@types/swagger-ui-express": "^4.1.6",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "mockingoose": "2.13.2",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": false,
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^@models/(.*)$": "<rootDir>/src/models/$1",
      "^@repositories/(.*)$": "<rootDir>/src/repositories/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/*.d.ts"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.(ts)"
    ]
  }
}
